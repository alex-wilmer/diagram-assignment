template(name='upload')
  unless deadlineMissedMessage
    +uploadTemplate
  else
    h1.center #{deadlineMissedMessage}

template(name='uploadOne')
  form#upload-form
    if imgurLink
      img(src='#{imgurLink}')      
      h1 Thank you!
      h2 You can upload a different diagram until #{date}.
    else
      h1 Please upload your diagram.
    .file
      input(type='file' name='imageFile')
      label.waves-effect.waves-light.btn(for='file') Upload

template(name='uploadTwo')
  form#details-form
    img(src='#{dataUrl}')
    input#back.waves-effect.waves-light.btn.red.darken-1(type='button' value='Back')        
    input.waves-effect.waves-light.btn(type='submit' value='Save')
