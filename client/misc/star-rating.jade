template(name='starRating')
  fieldset.rating
    input.star(type='radio' id='star5' name='rating' value='5')
    label.full(for='star5' title='Awesome - 5 stars')
    input.star(type='radio' id='star4' name='rating' value='4')
    label.full(for='star4' title='Pretty good - 4 stars')
    input.star(type='radio' id='star3' name='rating' value='3')
    label.full(for='star3' title='Meh - 3 stars')
    input.star(type='radio' id='star2' name='rating' value='2')
    label.full(for='star2' title='Kinda bad - 2 stars')
    input.star(type='radio' id='star1' name='rating' value='1')
    label.full(for='star1' title='Sucks big time - 1 star')